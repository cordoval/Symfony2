{% extends base_template %}

{% block actions %}
    <div class="sonata-actions">
        <ul>
            {% if admin.hasroute('edit') and admin.isGranted('EDIT')%}
                <li class="btn sonata-action-element"><a href="{{ admin.generateUrl('edit', {'id': admin.id(object), 'uniqid': admin.uniqid}) }}">Return to the Listing</a></li>
            {% endif %}
            {% if admin.hasroute('list') and admin.isGranted('LIST')%}
                <li class="btn sonata-action-element"><a href="{{ admin.generateUrl('list') }}">{{ 'link_action_list'|trans({}, 'SonataAdminBundle') }}</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block show %}
{% spaceless %}
    <div class="sonata-ba-view">
            <table class="table table-bordered">
                    <tr class="sonata-ba-view-title">
                        <td colspan="2">
                            Listing
                        </td>
                    </tr>
            </table>
    </div>
    <h4>K Ref : [{{ object.kRef }}]</h4>
    <div id="email">
    <form name="Form1">
    <textarea cols="60" rows="5" id=listing />{{ listing }}</textarea>
    <script type="text/javascript">

function CopyToClipboard()

{
CopiedTxt = document.selection.createRange();
CopiedTxt.execCommand("Copy");
}

</script>
<input type="button" onClick="CopyToClipboard()" value="Copy to clipboard" />
</form>
	</div>
    
{% endspaceless %}
{% endblock %}

